{
    "manifest_version": 3,
    "name": "ATS AI Sourcing Extension",
    "version": "1.0",
    "description": "Scrape LinkedIn profiles and send to ATS AI Backend",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "http://localhost:3001/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/in/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}